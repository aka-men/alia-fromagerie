<div class="row">
    <div class="col-lg-12">
        <p style="padding: 10px 15px;color: red;" class="form-error"></p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <select data-href="{{ path('app_fournisseur_produits_collection',{'id':fournisseur.id}) }}" id="select-produits" name="select_produits" multiple>
                {% for produit in produits %}
                    {% if (produit.isAchat and not produit.isMatierePremiere and fournisseur.typeVente == 2) or (produit.isMatierePremiere and fournisseur.typeVente == 1) %}
                        <option {% if fournisseur.produits.contains(produit) %} selected {% endif %} value="{{ produit.id }}">{{ produit.titre }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
</div>