{% extends "layout.html.twig" %}
{% set item = 'fournisseur' %}
{% block title %}Fournisseur : {{ fournisseur.nom }}{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_index') }}">Alia-Fromagerie</a></li>
    <li><a href="{{ path('app_fournisseur_index') }}">Fournisseurs</a></li>
    <li class="active">{{ fournisseur.nom }}</li>
{% endblock %}

{% block contenu %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        Editer Fournisseur : {{ fournisseur.nom }}
                    </h2>
                </div>
                <div class="body">
                    {% spaceless %}
                        {% if not formFournisseur.vars.valid %}
                            <div class="alert bg-red alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                                {% for children in formFournisseur.children %}
                                        {% if not children.vars.valid %}
                                             {{ form_errors(children) }}
                                        {% endif %}
                                    {% endfor %}
                            </div>
                        {% endif %}
                    {% endspaceless %}
                    {{ form_start(formFournisseur,{'attr':{'method':'POST','id':'appbundle_fournisseur'}}) }}

                    <label for="appbundle_fournisseur_nom">Nom Fournisseur</label>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(formFournisseur.nom, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>

                    <label for="appbundle_fournisseur_adresse">Adresse Fournisseur</label>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(formFournisseur.adresse, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary m-t-15 waves-effect"><i class="material-icons">save</i> <span class="icon-name"> Enregistrer</span></button>
                    {{ form_rest(formFournisseur) }}
                    {{ form_end(formFournisseur) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <!-- Jquery Validation Plugin Css -->
    <script src="{{ asset('plugins/jquery-validation/jquery.validate.js') }}"></script>
    <script src="{{ asset('js/fournisseur/index.js') }}"></script>
{% endblock %}