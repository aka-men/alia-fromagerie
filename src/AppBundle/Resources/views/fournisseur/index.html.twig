{% extends "layout.html.twig" %}
{% set item = 'fournisseur' %}
{% block title %}Fournisseur{% endblock %}

{% block breadcrumb %}
    <li><a href="{{ path('app_index') }}">Alia-Fromagerie</a></li>
    <li class="active">Fournisseur</li>
{% endblock %}

{% block contenu %}
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        List Fournisseurs
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="#add-fournisseur" class=" waves-effect waves-block"><div class="demo-google-material-icon"> <i class="material-icons">add_box</i> <span class="icon-name">Ajouter</span> </div></a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <nav class="body">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>Nom Fournisseur</th>
                                <th>Adresse Fournisseur</th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                        {% if fournisseurs|length > 0 %}
                            {% for fournisseur in fournisseurs %}
                                <tr>
                                    <td>{{ fournisseur.nom }}</td>
                                    <td>{{ fournisseur.adresse }}</td>
                                    <td class="text-center">
                                        <a data-toggle="tooltip" data-placement="top" title="" data-original-title="Editer" href="{{ path('app_fournisseur_edit',{'id':fournisseur.id}) }}" class="btn bg-light-blue waves-effect"><i class="material-icons">mode_edit</i></a>
                                    </td>
                                </tr>
                            {% endfor %}
                        {% else %}
                            <tr>
                                <td colspan="3">
                                <div class="alert alert-info">
                                    <strong>Liste vide</strong> veuillez utiliser le formulaire ci-dessous pour ajouter un fournisseur.
                                </div>
                                </td>
                            S</tr>
                        {% endif %}
                        </tbody>
                    </table>
                    <nav>
                        {{ knp_pagination_render(fournisseurs) }}
                    </nav>
                </div>
            </div>
        </div>


    <div id="add-fournisseur" class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        Ajouter Fournisseur
                    </h2>
                </div>
                <div class="body">
                    {% spaceless %}
                        {% if not formFournisseur.vars.valid %}
                            <div class="alert bg-red alert-dismissible" role="alert">
                                <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">Ã—</span></button>
                                {% for children in formFournisseur.children %}
                                    {% if not children.vars.valid %}
                                        {{ form_errors(children) }}
                                    {% endif %}
                                {% endfor %}
                            </div>
                        {% endif %}
                    {% endspaceless %}
                    {{ form_start(formFournisseur,{'attr':{'method':'POST','id':'appbundle_fournisseur'}}) }}

                    <label for="appbundle_fournisseur_nom">Nom Fournisseur</label>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(formFournisseur.nom, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>

                    <label for="appbundle_fournisseur_adresse">Adresse Fournisseur</label>
                    <div class="form-group">
                        <div class="form-line">
                            {{ form_widget(formFournisseur.adresse, {'attr': {'class':'form-control'}}) }}
                        </div>
                    </div>
                    <br/>
                    <button type="submit" class="btn btn-primary m-t-15 waves-effect"><i class="material-icons">add_box</i> <span class="icon-name">Ajouter</span></button>
                    {{ form_rest(formFournisseur) }}
                    {{ form_end(formFournisseur) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <!-- Jquery Validation Plugin Css -->
    <script src="{{ asset('plugins/jquery-validation/jquery.validate.js') }}"></script>
    <script src="{{ asset('js/fournisseur/index.js') }}"></script>
{% endblock %}