{% if fournisseur is defined %}
    <div class="x_panel">
        <div class="x_title">
            <h2>Liste des produits/M.Premières vendus par <strong>{{ fournisseur.nom }}</strong></h2>
            <ul class="nav navbar-right panel_toolbox">
                <li><a title="Atacher/Détacher" data-loading-text='<i class="fa fa-spin fa-spinner" aria-hidden="true"></i>' data-title="Atacher/Détacher des produits pour <strong>{{ fournisseur.nom }}</strong>" data-href="{{ path('app_fournisseur_produits_collection',{'id':fournisseur.id}) }}" id="atache-detache-produits-to-fournisseur"><i class="fa fa-sitemap" aria-hidden="true"></i></a></li>
                <li><a data-fournisseur="{{ fournisseur.id }}" data-loading-text='Veuillez patienter <i class="fa fa-spin fa-spinner" aria-hidden="true"></i>' data-title="Ajouter un nouveur produit pour <strong>{{ fournisseur.nom }}</strong>" {% if fournisseur.typeVente == 1 %} data-href="{{ path('app_produit_matiere_add') }}" {% elseif fournisseur.typeVente == 2 %} data-href="{{ path('app_produit_fini_add') }}" {% endif %} id="add-produit-to-fournisseur"><i class="fa fa-plus-square" aria-hidden="true"></i> Ajouter</a></li>
                <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
            </ul>
            <div class="clearfix"></div>
        </div>
        <div class="x_content">
            <div class="row">
                <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <table data-href="{{ path('app_produit_liste_by_fournisseur',{'id':fournisseur.id}) }}" id="table-produits" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th style="background-color: transparent;"></th>
                            <th>Titre</th>
                            <th class="text-center">Action</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for produit in fournisseur.produits %}
                            <tr>
                                <td class="bg-ligne">{{ loop.index }}</td>
                                <td>{{ produit.titre }}</td>
                                <td class="text-center">
                                    <button data-loading-text='<i class="fa fa-spinner fa-spin" aria-hidden="true"></i>' class="btn btn-table btn-xs btn-danger produit-fournisseur-delete"  data-href="{{ path('app_produit_fournisseur_delete',{'produit':produit.id,'fournisseur':fournisseur.id}) }}" title="Détacher"><i class="fa fa-chain-broken" aria-hidden="true"></i></button>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endif %}