{% if achat.produits|length > 0 %}
<div class="row">
    <div class="col-lg-12">
        {% for pa in achat.produits %}
             {% if achat.optionsForProduct(pa.produit)|length > 0 or achat.productionsForProduct(pa.produit)|length > 0 %}
                 <h4>{{ pa.produit.titre }}</h4>
             {% endif %}
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    {% for option in achat.optionsForProduct(pa.produit) %}
                        <th class="text-center" title="{{ option.option.label }}">{{ option.option.code }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                <tr>
                    {% for option in achat.optionsForProduct(pa.produit) %}
                        <td class="text-center" title="{{ option.option.label }}">{{ option.valeur }}</td>
                    {% endfor %}
                </tr>
                </tbody>
            </table>
            <table class="table table-striped table-bordered">
                <thead>
                <tr>
                    {% for pra in achat.productionsForProduct(pa.produit) %}
                        <th class="text-center" title="{{ pra.produit.titre}}">{{ pra.produit.titre }}</th>
                    {% endfor %}
                </tr>
                </thead>
                <tbody>
                <tr>
                    {% for pra in achat.productionsForProduct(pa.produit) %}
                        <td class="text-center" title="{{ pra.produit.titre }}">{{ pra.valeur }}</td>
                    {% endfor %}
                </tr>
                </tbody>
            </table>
        {% endfor %}
    </div>
</div>
{% else %}
    <h4>No products</h4>
{% endif %}

