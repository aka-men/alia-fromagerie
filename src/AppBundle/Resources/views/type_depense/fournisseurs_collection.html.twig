<div class="row">
    <div class="col-lg-12">
        <p style="padding: 10px 15px;color: red;" class="form-error"></p>
    </div>
</div>
<div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
       <div class="text-center form-group">
           <button data-loading-text='Veuillez patienter <i class="fa fa-spin fa-spinner" aria-hidden="true"></i>' data-href="{{ path('app_fournisseur_add') }}" data-title="Ajouter un fournisseur" id="add-fournisseur" class="btn btn-xs btn-info"><i class="fa fa-plus-square" aria-hidden="true"></i> Ajouter un nouveau fournisseur</button>
       </div>
    </div>
</div>
<div class="row">
    <div class="col-lg-12">
        <div class="form-group">
            <select class="msl" data-href="{{ path('app_type_depense_fournisseurs_collection',{'id':type.id}) }}" id="select-fournisseurs" name="select_fournisseurs" multiple>
                {% for fournisseur in fournisseurs %}
                    {% if fournisseur.typeVente is null or fournisseur.typeVente == 0 %}
                        <option {% if type.fournisseurs.contains(fournisseur) %} selected {% endif %} value="{{ fournisseur.id }}">{{ fournisseur.nom }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
    </div>
</div>