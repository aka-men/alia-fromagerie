<tr data-index="{{ index }}" class="line-charge">
    <td class="a-center ">
        <input type="checkbox" class="check-one" name="table_records[{{ index }}]">
    </td>
    <td>{{ employe.fullName }}

        <input value="{{ employe.id }}" type="hidden" name="appbundle_charge[{{ index }}][employe]" id="appbundle_charge_employe_{{ index }}" />
    </td>
    <td>
        <input style="max-width: 160px;" type="text" class="form-control date-input required" value="{{ "now"|date('d/m/Y') }}" name="appbundle_charge[{{ index }}][date]" id="appbundle_charge_date_{{ index }}" />
    </td>
    <td>
        <select placeholder="Designation" data-container="body" multiple data-live-search="true" name="appbundle_charge[{{ index }}][typesDepenses]" id="appbundle_charge_typesDepenses_{{ index }}" class="form-control show-tick">
            {% for type in types %}
                {% if type.forEmploye %}
                    <option {% if selectedType is defined %} data-selected="{{ selectedType }}" {% endif %}{% if selectedType is defined and type.id == selectedType %}selected{% endif %} value="{{ type.id }}">{{ type.label }}</option>
                {% endif %}
            {% endfor %}
        </select>
    </td>
    <td>
        <input style="max-width: 120px;" type="text" class="form-control required numerique" value="{{ employe.salaire }}" name="appbundle_charge[{{ index }}][montantTtc]" id="appbundle_charge_montantTtc_{{ index }}" />
    </td>
    <td>
        <select data-live-search="true" data-container="body" name="appbundle_charge[{{ index }}][modePayment]" id="appbundle_charge_modePayment_{{ index }}" class="form-control mode show-tick">
            <option selected value>Mode Paiement</option>
            {% for mode in modes %}
                <option value="{{ mode.id }}">{{ mode.label }}</option>
            {% endfor %}
        </select>
    </td>
    <td>
        <input type="text" class="form-control cheque entier" name="appbundle_charge[{{ index }}][numeroCheque]" id="appbundle_charge_numeroCheque_{{ index }}" />
    </td>
    <td>
        <input style="max-width: 160px;" type="text" value="" class="form-control cheque date-input" name="appbundle_charge[{{ index }}][dateCheque]" id="appbundle_charge_dateCheque_{{ index }}" />
    </td>
    <td>
        <button style="max-width: 100%;" class="btn btn-sm btn-default bind_img">Choisir photo</button>
        <input class="cheque" type="file" style="display: none;" name="appbundle_charge[{{ index }}][imageCheque][file]" id="appbundle_charge_imageCheque_{{ index }}_file" />
    </td>
    <td>
        <textarea rows="1" style="min-width: 150px;" placeholder="ObsÃ©rvation" class="form-control auto-growth" name="appbundle_charge[{{ index }}][observation]" id="appbundle_charge_observation_{{ index }}"></textarea>
    </td>
</tr>