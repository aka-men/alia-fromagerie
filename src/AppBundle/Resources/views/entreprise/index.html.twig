{% extends "layout.html.twig" %}
{% set item = 'clients' %}
{% set menuItem = 'entreprise'  %}
{% block title %}Entreprises {% endblock %}

{% block style %}
    <!-- Datatables -->
    <link href="{{ asset('vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

 {% block breadcrumb %}
     <li class="active">Entreprises</li>
 {% endblock %}

{% block contenu %}
    {% include "AppBundle:client:menu.html.twig" with {'item':menuItem} %}
    <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Recherche : </h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><select class="form-control" id="length"><option value="10">10</option><option value="25">25</option><option selected value="50">50</option><option value="100">100</option></select></li>
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div id="search-bar" class="x_content">
                    <div class="row row">
                        <div class="col-lg-1 col-md-1 col-sm-3 col-xs-6">
                            <div class="form-group">
                                <input type="text" placeholder="Id" title="Id" id="id" class="form-control small-input filter" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                            <div class="form-group">
                                <input type="text" placeholder="Nom" title="Nom" id="nom" class="form-control filter" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                            <div class="form-group">
                                <input type="text" placeholder="Id CE" title="Identifiant commun de l'entreprise" id="ce" class="form-control filter" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                            <div class="form-group">
                                <input type="text" placeholder="Id Fiscale" title="Identifiant fiscale" id="fiscale" class="form-control filter " />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                            <div class="form-group">
                                <input type="text" placeholder="Patente" title="Patente" id="patente" class="form-control filter" />
                            </div>
                        </div>
                        <div class="col-lg-2 col-md-2 col-sm-4 col-xs-6">
                            <div class="form-group">
                                <input type="text" placeholder="Autres" title="Autres" id="other" class="form-control filter" />
                            </div>
                        </div>
                        <div class="col-lg-1 col-md-1 col-sm-2 col-xs-3">
                            <div class="form-group">
                                <select id="archive" class="form-control show-tick filter">
                                    <option value="">Archivé</option>
                                    <option value="1">Oui</option>
                                    <option selected value="0">Non</option>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12 col-md-12 -col-sm-12 col-xs-12">
            <div class="x_panel">
                <div class="x_title">
                    <h2>Liste Entreprises</h2>
                    <ul class="nav navbar-right panel_toolbox">
                        <li><a data-loading-text='Veuillez patienter <i class="fa fa-spin fa-spinner" aria-hidden="true"></i>' data-title="Ajouter une nouvelle entreprise" data-href="{{ path('app_entreprise_add') }}" id="add-entreprise"><i class="fa fa-plus-square" aria-hidden="true"></i> Ajouter</a></li>
                        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                    </ul>
                    <div class="clearfix"></div>
                </div>
                <div class="x_content">
                    <table data-href="{{ path('app_entreprise_index') }}" id="table-entreprises" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                        <thead>
                        <tr>
                            <th style="background-color: transparent;"></th>
                            <th>Id</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Téléphone</th>
                            <th>Fax</th>
                            <th>Action</th>
                        </tr>
                        </thead>
                        <tbody></tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascript %}
    <!-- Datatables -->
    <script src="{{ asset('vendors/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendors/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendors/datatables.net-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js') }}"></script>
{% endblock %}
{% block customJs %}
    <script src="{{ asset('js/entreprise/index.js') }}"></script>
{% endblock %}