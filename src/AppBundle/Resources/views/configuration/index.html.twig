{% extends "layout.html.twig" %}
{% set item = 'settings' %}
{% set sousItem = 'config' %}
{% block title %}Configuration{% endblock %}

{% block style %}
    <!-- Datatables -->
    <link href="{{ asset('vendors/datatables.net-bs/css/dataTables.bootstrap.min.css') }}" rel="stylesheet">
    <link href="{{ asset('vendors/datatables.net-responsive-bs/css/responsive.bootstrap.min.css') }}" rel="stylesheet">
{% endblock %}

 {% block breadcrumb %}
     <li class="active">Paramétrages</li><li class="active">Générale</li>
 {% endblock %}

{% block contenu %}
<div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
       <div class="row">
           <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
               <div class="x_panel">
                   <div class="x_title">
                       <h2>Information de l'entreprise</h2>
                       <ul class="nav navbar-right panel_toolbox">
                           <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                       </ul>
                       <div class="clearfix"></div>
                   </div>
                   <div class="x_content">
                       {% include "AppBundle:configuration:entreprise.form.html.twig" with {'formEntreprise':formEntreprise} %}
                   </div>
               </div>
           </div>
       </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Designations charges employés</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a id="add-type" data-href="{{ path('app_type_depense_employe_add') }}" data-title="Ajouter une nouvelle designation" data-loading-text='Veuillez patienter <i class="fa fa-spin fa-spinner" aria-hidden="true"></i>'><i class="fa fa-plus-square" aria-hidden="true"></i> Ajouter</a></li>
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {% include "AppBundle:configuration:type_charge_employe.html.twig" with {'formEntreprise':formEntreprise} %}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Configuration de l'application</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {% include "AppBundle:configuration:application.form.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Administration</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {% include "AppBundle:configuration:admin.form.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                <div class="x_panel">
                    <div class="x_title">
                        <h2>Charges Mensuelles</h2>
                        <ul class="nav navbar-right panel_toolbox">
                            <li><a id="select-type-mensuelle" data-href="{{ path('app_type_depense_mensuelle_select') }}" data-title="Sélectionner les charges mensuelles" data-loading-text='Veuillez patienter <i class="fa fa-spin fa-spinner" aria-hidden="true"></i>'><i class="fa fa-check-square-o" aria-hidden="true"></i> Sélectionner</a></li>
                            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a></li>
                        </ul>
                        <div class="clearfix"></div>
                    </div>
                    <div class="x_content">
                        {% include "AppBundle:configuration:charge_mensuelle.html.twig" %}
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascript %}
    <!-- Datatables -->
    <script src="{{ asset('vendors/datatables.net/js/jquery.dataTables.min.js') }}"></script>
    <script src="{{ asset('vendors/datatables.net-bs/js/dataTables.bootstrap.min.js') }}"></script>
    <script src="{{ asset('vendors/datatables.net-responsive/js/dataTables.responsive.min.js') }}"></script>
    <script src="{{ asset('vendors/datatables.net-responsive-bs/js/responsive.bootstrap.js') }}"></script>
{% endblock %}

{% block customJs %}
<script type="text/javascript" src="{{ asset('js/configuration/generale.js') }}"></script>
{% endblock %}