<div class="row">
    <div class="col-lg-12">
        <p style="padding: 10px 15px;color: red;" class="form-error"></p>
    </div>
</div>
{{ form_start(formClient,{'attr':{'id':'appbundle_client','action':action}}) }}
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                {{ form_label(formClient.nom) }}
                {{ form_widget(formClient.nom, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
           <div class="form-group">
               {{ form_label(formClient.prenom) }}
               {{ form_widget(formClient.prenom, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                {{ form_label(formClient.surNom) }}
                {{ form_widget(formClient.surNom, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                {{ form_label(formClient.cin) }}
                {{ form_widget(formClient.cin, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                {{ form_label(formClient.email) }}
                {{ form_widget(formClient.email, {'attr': {'class':'form-control'}}) }}
            </div>
        </div>
        <div class="col-lg-3 col-md-3 col-sm-6 col-xs-12">
            <div class="form-group">
                {{ form_label(formClient.gsm) }}
                {{ form_widget(formClient.gsm, {'attr': {'class':'form-control phone'}}) }}
            </div>
        </div>
        <div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">
            <div class="form-group">
                {{ form_label(formClient.adresse) }}
                {{ form_widget(formClient.adresse, {'attr': {'class':'form-control auto-growth'}}) }}
            </div>
        </div>
        {% if params.type is defined %}
            <input type="hidden" name="appbundle_client[isCommercial]" value="{% if params.type == 'commerciale' %}1{% else %}0{% endif %}" />
        {% endif %}
    </div>
    <div class="row">
        <div class="col-lg-6 col-md-6 col-sm-6 col-xs-12">
            <div class="form-group">
                <div class="pretty info circle curvy a-rotate">
                    {{ form_widget(formClient.hasTva, {'attr': {}}) }}
                    <label for="appbundle_client_hasTva"><i class="fa fa-check" aria-hidden="true"></i> Vente avec TVA</label>
                </div>
            </div>
        </div>
    </div>

{% do formClient.hasTva.setRendered %}
{% do formClient.isCommercial.setRendered  %}
{{ form_rest(formClient) }}
{{ form_end(formClient) }}