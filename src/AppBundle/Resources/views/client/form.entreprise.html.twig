<div class="row">
    <div class="col-lg-12">
        <p style="padding: 10px 15px;color: red;" class="form-error"></p>
    </div>
</div>
<form method="post" action="{{ action }}" name="client_entreprise" id="client_entreprise" data-parsley-validate>
    <div class="row">
        <div class="col-lg-12">
            <div class="form-group">
                <label for="entreprise_id">Entreprise</label>
                <select placeholder="Entreprise" data-live-search="true" class="form-control show-tick"  name="entreprise_id" id="entreprise_id" required>
                    {% for entreprise in entreprises %}
                        {% if not entreprise.isArchive %}
                            <option value="{{ entreprise.id }}">{{ entreprise.nom }}</option>
                        {% endif %}
                    {% endfor %}
                </select>
                <p style="margin-top: -5px;" class="help-block text-center"><a id="add-entreprise" data-href="{{ path('app_entreprise_add') }}" data-title="Ajouter une entreprise" data-loading-text='Veuillez patienter <i class="fa fa-spin fa-spinner" aria-hidden="true"></i>' class="btn btn-xs btn-link"><i class="fa fa-plus-square" aria-hidden="true"></i> Ajouter entreprise</a></p>
            </div>
        </div>
    </div>
</form>
